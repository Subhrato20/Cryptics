  <div class="container">
    <h1 class="display-3">Hey, welcome to Cryptics!</h1>
    <br>
    <a class="btn btn-dark btn-lg" href="/transaction?id=<%= userid %>" role="button">Make a New Transaction</a>
    <hr>
    <% console.log(usersWithSecrets); 
    usersWithSecrets.forEach(function(user){ %>
      <p class="secret-text"><%=user.secret%></p>
