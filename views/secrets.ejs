    <a class="btn btn-dark btn-lg" href="/balance" role="button">Add Money</a>
    <a class="btn btn-light btn-lg" href="/account?id=<%= userid %>" role="button">Your Account</a>
    <a class="btn btn-dark btn-lg" href="/history" role="button">Transation History</a>
    <a class="btn btn-light btn-lg" href="/money?id=<%= userid %>" role="button">Account Balance</a>
